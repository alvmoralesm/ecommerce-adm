<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row mt-3">
    <div class="col-4">
      <h1><b>Products</b></h1>
    </div>
    <div class="col-4 offset-4">
      <div class="d-grid gap-2">
        <a href="/products/new" class="btn btn-success"
          ><i class="bi bi-plus-circle"></i> Add Product</a
        >
      </div>
    </div>
  </div>

  <form class="mt-5" action="/products/search" method="GET">
    <div class="form-group row">
      <label for="name" class="col-sm-1 col-form-label">Name:</label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="name" id="name" />
      </div>
      <div class="col-sm-1 col-xs-12 d-grid gap-2">
        <button type="submit" class="btn btn-success mt-3 mt-md-0">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>
  </form>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Stock</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let product of products){ %>

        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.stock %></td>
          <td>
            <a
              href="/products/<%= product.id %>/edit"
              class="btn btn-secondary card-link"
              ><i class="bi bi-pencil-square"></i> Edit
            </a>
            <form
              class="d-inline"
              action="/products/<%= product.id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Delete
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
