<% layout('layouts/boilerplate') %>

<div class="container">
  <div class="row mt-3">
    <div class="col-sm-4 col-6">
      <h1><b>Brands</b></h1>
    </div>
    <div class="col-sm-4 offset-sm-4 col-6">
      <div class="d-grid gap-2">
        <a href="/brands/new" class="btn btn-success"
          ><i class="bi bi-plus-circle"></i> Add Brand</a
        >
      </div>
    </div>
  </div>

  <form class="mt-5" action="/brands/search" method="GET">
    <div class="form-group row">
      <label for="name" class="col-sm-1 col-form-label">Name:</label>
      <div class="col-sm-4">
        <input class="form-control" type="text" name="name" id="name" />
      </div>

      <div class="col-sm-1 col-xs-12 d-grid gap-2">
        <button type="submit" class="btn btn-secondary mt-3 mt-md-0">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>
  </form>
  <div class="row mt-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let brand of brands){ %>

        <tr>
          <td><%= brand.name %></td>
          <td><%= brand.description %></td>
          <td>
            <a
              href="/brands/<%= brand.id %>/edit"
              class="btn btn-primary card-link"
              ><i class="bi bi-pencil-square"></i>
            </a>
            <form
              class="d-inline"
              action="/brands/<%= brand.id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">
                <i class="bi bi-trash-fill"></i>
              </button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
